<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.custord.user.healthlist.MainActivity">


    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relLayoutMiddlde"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relLayoutBotBar">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/azur"
                android:orientation="vertical"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="cursive"
                                    android:text="Profile"
                                    android:textAlignment="center"
                                    android:textSize="30sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/image_view"
                                    android:layout_width="157dp"
                                    android:layout_height="104dp"
                                    android:layout_gravity="center"
                                    android:cropToPadding="true"
                                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.42"
                                        android:text="Username:"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/username"
                                        android:layout_width="117dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:ems="10"
                                        android:gravity="center"
                                        android:inputType="textPersonName"
                                        android:text="Admin"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.52"
                                        android:text="Email:"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/email"
                                        android:layout_width="117dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.17"
                                        android:ems="10"
                                        android:gravity="center"
                                        android:inputType="textEmailAddress"
                                        android:text="admin@gmail.com"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.51"
                                        android:text="Phone:"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/phone"
                                        android:layout_width="117dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:ems="10"
                                        android:gravity="center"
                                        android:inputType="phone"
                                        android:text="010 111 3323"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.40"
                                        android:text="Height (cm):"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/height"
                                        android:layout_width="117dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:ems="10"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:text="170"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.41"
                                        android:text="Weight (kg):"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <EditText
                                        android:id="@+id/weight"
                                        android:layout_width="117dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.16"
                                        android:ems="10"
                                        android:gravity="center"
                                        android:inputType="number"
                                        android:text="50"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="318dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="0.01"
                                    android:background="@drawable/edittextstyle"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/textViewGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.42"
                                        android:text="Gender"
                                        android:textAlignment="center"
                                        android:textSize="14sp" />

                                    <RadioGroup
                                        android:layout_width="167dp"
                                        android:layout_height="match_parent"
                                        android:checkedButton="@+id/radioButton2"
                                        android:orientation="horizontal">


                                        <RadioButton
                                            android:id="@+id/radioButton2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Male"
                                            android:textSize="12sp" />

                                        <RadioButton
                                            android:id="@+id/radioButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Female" />

                                    </RadioGroup>

                                </LinearLayout>

                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayoutBotBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavViewBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/grey_border_bar"
                app:menu="@menu/bottom_navigation_menu">

            </android.support.design.widget.BottomNavigationView>
        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
